@model BSIGeneralAffairBLL.DTO.Category.CategoryUpdateDTO

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Category </h2>
<hr />
@Html.Raw(TempData["message"])
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.AssetCategoryID" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="AssetCategoryID" class="control-label">Category ID</label>
                <input asp-for="AssetCategoryID" class="form-control" value="@Model.AssetCategoryID" readonly />
                <span asp-validation-for="AssetCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="AssetCategoryName" class="control-label">Category Name</label>
                <input asp-for="AssetCategoryName" class="form-control" value="@Model.AssetCategoryName" />
                <span asp-validation-for="AssetCategoryName" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col-auto">
                    <div>
                        <a asp-action="Index" class="btn btn-warning">Back</a>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

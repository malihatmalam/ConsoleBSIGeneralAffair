@model BSIGeneralAffairBLL.DTO.Departement.DepartementUpdateDTO

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Department </h2>
<hr />
@Html.Raw(TempData["message"])
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartementID" class="control-label">Departmenet ID</label>
                <input asp-for="DepartementID" class="form-control" readonly value="@Model.DepartementID"/>
                <span asp-validation-for="DepartementID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartementName" class="control-label">Department Name</label>
                <input asp-for="DepartementName" class="form-control" value="@Model.DepartementName" />
                <span asp-validation-for="DepartementName" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col-auto">
                    <div>
                        <a asp-action="Index" class="btn btn-warning">Back</a>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

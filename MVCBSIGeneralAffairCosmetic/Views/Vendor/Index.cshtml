@model IEnumerable<BSIGeneralAffairBLL.DTO.Vendor.VendorDTO>

@{
    ViewData["Title"] = "Index";
}
<h2>List Vendor </h2>
@Html.Raw(ViewBag.Message)
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table" id="tblvendor">
    <thead>
        <tr>
            <th>
                Vendor Name
            </th>
            <th>
                Vendor Address
            </th>
            <th>
                Created Date
            </th>
            <th>
                Updated Date
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    <a href="/Vendor/Edit/@item.VendorID" class="btn btn-warning">edit</a>
                    <a href="/Vendor/Delete/@item.VendorID" class="btn btn-danger">delete</a>
                    @* @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) *@
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{
        <script>
            $(document).ready(function () {
                $('#tblvendor').DataTable();
            });
        </script>
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.datatables.net/2.0.2/js/dataTables.js"></script>
        <script src="https://cdn.datatables.net/2.0.2/js/dataTables.bootstrap5.js"></script>
    }
}

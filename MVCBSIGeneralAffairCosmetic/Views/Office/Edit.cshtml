@model BSIGeneralAffairBLL.DTO.Office.OfficeUpdateDTO

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Brand </h2>
<hr />
@Html.Raw(TempData["message"])
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.OfficeID" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OfficeID" class="control-label">Office ID</label>
                <input asp-for="OfficeID" class="form-control" readonly value="@Model.OfficeID" />
                <span asp-validation-for="OfficeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficeName" class="control-label">Office Name</label>
                <input asp-for="OfficeName" class="form-control" value="@Model.OfficeName"/>
                <span asp-validation-for="OfficeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficeAddress" class="control-label">Office Address</label>
                <input asp-for="OfficeAddress" class="form-control" value="@Model.OfficeAddress" />
                <span asp-validation-for="OfficeAddress" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col-auto">
                    <div>
                        <a asp-action="Index" class="btn btn-warning">Back</a>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
